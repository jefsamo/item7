doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title item7 | Profile
    link(rel="stylesheet" href="/css/profileStyle.css")
    link(rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(href="http://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet" type="text/css")
    link(rel="shortcut icon" type="image/png" href="images/item7 chef.png")
  body
    header
      .header__section
        .header__logo
          a(href="/shop")
            img(src="images/item7.png" alt="item7 logo")
        .search
          input.search(type="search" name="search" id="" placeholder="Search items..")
        .header__nav
          .initials
            - const initials = user.firstName.charAt(0).toUpperCase() + user.lastName.charAt(0).toUpperCase(); 
              a(href="/profile")= initials 
              a(href="/profile" style="color: #fff; margin-left: 32px;")= `${user.lastName}` 
        .cart
          a(href="/cart")
            i.fa.fa-cart-arrow-down(aria-hidden="true" style="font-size: 2rem;")
    .container
      .container__content
        .container__content-1
          .container__side-top
            .initials
             
              a(href="/profile")= initials.toUpperCase()
            .container-side-name
              p= user.firstName +" "+ user.lastName
          .sidebar
            .sidebar-content.active
              i.fa.fa-user.fa-2x
              a.active(href="profilepage.html") Personal Details
            .sidebar-content
              i.fa.fa-history.fa-2x
              a(href="#home") Orders
            .sidebar-content
              i.fa.fa-lock.fa-2x
              a(href="/change-password") Change Password
            .sidebar-content
              i.fa.fa-sign-out.fa-2x
              a.logout-btn(style="cursor: pointer;") Logout
        .container__content-2
          .container-content-large
            p Personal Details
            form.form-details
              label(for="firstname") First Name
              br
              input#firstName(type="text" name="firstName" placeholder=`${user.firstName}`)
              br
              label(for="firstname") Last Name
              br
              input#lastName(type="text" name="lastName" placeholder=`${user.lastName}`)
              br
              label(for="phoneNumber") Phone Number
              br
              input(type="number" name="phoneNumber" placeholder=`${user.phoneNumber}` disabled="")
              br
              label(for="emal") Email
              br
              input(type="email" name="Email" id="" placeholder=`${user.email}` disabled="")
              br
              input.submit(type="submit" value="Save Changes" style="\
              background-color: red;\
              color: #fff;\
              border: none;\
              cursor: pointer;\
              ")
    footer
      .footer
        .footer-section
          h3 For Company
          ul
            li
              a(href="#") About Us
            li
              a(href="#") Privacy
            li
              a(href="#") Terms &amp; Conditions
        .footer-section
          h3 For Customer
          ul
            li
              a(href="#") Login
            li
              a(href="#") Sign up
        .footer-section
          h3 For Consumers
          ul
            li
              a(href="#") Login
            li
              a(href="#") Sign up
      hr(style="width: 80%; text-align: center; margin-left: 100px;")
      .footer-bottom
        div
          p(style="margin-left: 150px; margin-top: 30px;")
            | Copyright &copy;
            script.
              document.write(new Date().getFullYear());
            |             All rights reserved |
        div
          img(src="images/item7.png" style="width: 100px; margin-top: -10px;" alt="")
        .butter
          p
            | Made by 
            i.fa.fa-heart-o
            | Butterfly Inc
      // <br>
      script(src='/js/bundle.js')
